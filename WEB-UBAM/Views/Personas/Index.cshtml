@{
    ViewData["Title"] = "Personas";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold p-2">Lista de personas</h2>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Fecha de Nacimiento</th>
            <th>Sexo</th>
            <th>CURP</th>
            <th>Usuario -Rol</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var persona in Model)
        {
            <tr>
                <td>@persona.NombrePersonaDto</td>
                <td>@persona.ApellidoPaternoPersonaDto</td>
                <td>@persona.ApellidoMaternoPersonaDto</td>
                <td>@persona.FechaNacimientoPersonaDto.ToShortDateString()</td>
                <td>@persona.SexoPersonaDto</td>
                <td>@persona.CurpPersonaDto</td>
                <td>
                    @if (persona.Roles != null && persona.Roles.Values.Count > 0)
                    {
                        @foreach (var rol in persona.Roles.Values)
                        {
                            @rol
                        }
                    }
                    else
                    {
                        <span>No</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>