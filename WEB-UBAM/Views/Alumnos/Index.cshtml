@{
    ViewData["Title"] = "Alumnos";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold p-2">Lista de alumnos</h2>
        <button type="button" class="btn btn-dark">Agregar Alumno</button>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Carrera</th>
            <th>Grupo</th>
            <th>Fecha de Nacimiento</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var alumno in Model)
        {
            <tr>
                <td>@alumno.NombreAlumno</td>
                <td>@alumno.CarreraAlumno</td>
                <td>@alumno.GrupoAlumno</td>
                <td>@alumno.FechaNacimientoAlumno.ToShortDateString()</td>
            </tr>
        }
        </tbody>
    </table>
</div>